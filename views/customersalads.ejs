                new google.translate.TranslateElement({pageLanguage: 'en'}, 'google_translate_element');
                }
            </script>

            <script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
        </div>

        <div id= "orderButton">
            <a href="customerorderpage">My Order</a>
        </div>

        <div class= "chick-fil-a-logo">
            <a href="/"><img src="./images/chick-fil-a-logo.png" alt="logo"/></a>
        </div>

        <div class="hr"><hr /></div>
            <ul id="nav">
                <li><a href="customerentrees">Entrees</a></li>
                <li><a href="customerwaffle_fries">Waffle Fries</a></li>
                <li><a href="customernuggets">Nugget Entrees</a></li>
                <li><a href="customersides">Sides</a></li>
                <li><a href="customerdrinks">Drinks</a></li>
                <li><a href="customerdesserts">Desserts</a></li>
                <li><a href="customersalads">Salads</a></li>
                <li><a href="customerdressings">Dressings</a></li>
                <li><a href="customersauces">Sauces</a></li>
            </ul>
        <div class="hr"><hr /></div>
    </div>

    <div id="items">
        <h3>Salads</h3>
        <div id="grid-container">
        <% for (var i in salads) {%>
                <div id="grid-item">
                    <img src="<%=salads[i].image%>" width= 350vw height= 350vw id=foodpictures/>
                    <p><%=salads[i].name%></p>
                    <p>$<%=salads[i].price%></p>
                    <form class='form' action='customerentreeform' method='post'> 
                        <div class="popup" onclick="myFunction()">
                            <input type="submit" name="name" id= "add-item" value="Add to Order">
                            <span class="popuptext" id="myPopup">Item Added!</span>
                        </div>
                        <input type="hidden" name="itemid" value="<%=salads[i].id%>">
                        <input type="hidden" name="itemname" value="<%=salads[i].name%>">
                        <input type="hidden" name="itemprice" value="<%=salads[i].price%>">
                    </form>
                </div>
        <% } %>
        </div>
    </div>

    <script>
        // When the user clicks on div, open the popup
        function myFunction() {
            var popup = document.getElementById("myPopup");

            if(popup.classList.contains("show")) {
    	        return
            }

            popup.classList.toggle("show");
        
            if(popup.classList.contains("show")) // Check if the popup is shown
             setTimeout(() => popup.classList.remove("show"), 2500) // If yes hide it after 10000 milliseconds
            
        }
    </script>

